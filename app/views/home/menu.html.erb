<h1>
  Menu
</h1>
<% Section.all.each do |section| %>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to section, menu_path(section: section), class: 'btn btn-secondary'%>
</div>
<% end %>

<!-- Single button -->
<div class="btn-group">
  <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort by
  </button>
  <div class="dropdown-menu">
       <% Section.all.each do |section| %>
      <%=link_to "#{section} Sort By",menu_path(:sort_param => "name",section: section),class: "dropdown-item"%>
    <%end%>
  </div>
</div>


<% @food_items.each do |food_item| %>
  <div class="card">
  <div class="card-block">
    <h4 class="card-title">  <%= link_to food_item.name, food_item_path(food_item) %></h4>
    <h6 class="card-subtitle text-muted"><%= food_item.description %></h6>
  </div>
  <%= image_tag food_item.image_url %> <br>
    <br>
  <a href="#" class="btn btn-primary">Order Now</a>
</div>

<% end %>

